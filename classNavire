package batailleNavale;

public class Navire {
	private Coordonnee debut;
	private Coordonnee fin;
	private Coordonnee[] partiesTouchees;
	private int nbTouchees;
	
	public Navire(Coordonnee debut, int longueur, boolean estVertical) {
		
		if (estVertical) {
			if (longueur + debut.getColonne() > 25) {
				throw new IllegalArgumentException("Le bateau dépasse de la grille !");
			}
			else {
			debut = new Coordonnee(debut.getLigne(), debut.getColonne());
			fin = new Coordonnee(this.debut.getLigne(), longueur + this.debut.getColonne());
		
			}
		}
		else {
			if (longueur + debut.getLigne() > 25) {
				throw new IllegalArgumentException("Le bateau dépasse de la grille !");
			}
			else {
			debut = new Coordonnee(debut.getLigne(), debut.getColonne());
			fin = new Coordonnee(longueur + this.debut.getLigne(), this.debut.getColonne());
			}
		}
	}
	
	public String toString() {
		
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
